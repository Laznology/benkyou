---
import AvatarCard from "./AvatarCard.astro";
import Navigation from "./Navigation.astro";
import ThemePopover from "./ThemePopover.astro";
---

<aside
  class="bg-background relative h-[calc(100vh-2.5rem)] rounded-md flex flex-col justify-between w-64 overflow-y-auto"
>
  <div class="absolute inset-0 bg-accent rounded-md pointer-events-none z-0"></div>
  <div class="relative z-10 p-6 space-y-6 flex flex-col justify-between h-full">
    <AvatarCard />
    
    <div class="flex flex-col space-y-4">
      <Navigation />
      <div class="hidden md:block">
        <ThemePopover />
      </div>
    </div>
  </div>
</aside>


